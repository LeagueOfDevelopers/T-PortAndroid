<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorPrimaryRipple</item>
    </style>

    <style name="TextViewOnMainSearch" parent="Theme.MaterialComponents.Light">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">normal</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="TextViewOnMainPopular" parent="Theme.MaterialComponents.Light">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="PickUpButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="backgroundTint">@color/colorAccent</item>
    </style>

    <style name="EditTextOnSearchItem" parent="ThemeOverlay.MaterialComponents.TextInputEditText">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">normal</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="TextViewTitleItem" parent="Theme.MaterialComponents.Light">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">normal</item>
        <item name="android:typeface">sans</item>
    </style>

</resources>
